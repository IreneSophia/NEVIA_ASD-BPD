	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/aur.2334},
	keywords = {/unread, affect/emotion, computer vision, facial expression, interpersonal coordination, social–emotional reciprocity, synchrony},
	pages = {2133--2142},
	file = {Accepted Version:C\:\\Users\\Oswin\\Zotero\\storage\\AN6SHRIM\\Zampella et al. - 2020 - Computer Vision Analysis of Reduced Interpersonal .pdf:application/pdf;Snapshot:C\:\\Users\\Oswin\\Zotero\\storage\\5YV4YPKK\\aur.html:text/html},
